{
    "manifest_version": 2,
    "name": "Chess Glasses",
    "description": "Extended visualization of the current board state on chess.com",
    "version": "1.0",
    "icons": {
        "16":"/icons/icon16.png",
        "48":"/icons/icon48.png",
        "128":"/icons/icon128.png"
    },
    "page_action": {
        "default_icon":{
            "16":"/icons/icon16.png",
            "48":"/icons/icon48.png",
            "128":"/icons/icon128.png"
        }
    },
    "content_scripts": [{
        "matches": ["https://www.chess.com/*"]
    }]

}