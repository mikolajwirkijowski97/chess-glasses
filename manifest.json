{
    "manifest_version": 3,
    "name": "Chess Glasses",
    "description": "Extended visualization of the current board state on chess.com",
    "version": "0.31",
    "icons": {
        "16":"/icons/icon16.png",
        "48":"/icons/icon48.png",
        "128":"/icons/icon128.png"
    },
    "action": {
        "default_icon":{
            "16":"/icons/icon16.png",
            "48":"/icons/icon48.png",
            "128":"/icons/icon128.png"
        }
    },
    "content_scripts": [{
        "matches": ["https://www.chess.com/*"],
        "js": ["main.js"]
    }]

}